<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_pw"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_id"
        android:layout_toStartOf="@+id/input_id"
        android:gravity="center"
        android:text="PW"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/user_pw"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="ID"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/input_id"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_passwd"
        android:layout_alignTop="@+id/user_id"
        android:hint="ID 입력"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/input_passwd" />

    <EditText
        android:id="@+id/input_passwd"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/user_pw"
        android:layout_marginEnd="62dp"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt_signup"
        android:layout_marginStart="74dp"
        android:text="로그인"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="74dp" />

    <Button
        android:id="@+id/bt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="102dp"
        android:text="회원가입"
        tools:ignore="UnknownId"
        android:layout_alignParentRight="true"
        android:layout_marginRight="102dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="164dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:src="@drawable/speechbubble" />

</RelativeLayout>