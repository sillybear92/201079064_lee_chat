<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/signup_pw"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/signup_id"
        android:layout_marginTop="188dp"
        android:text="PassWd"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/signup_id"
        android:gravity="center"/>

    <TextView
        android:id="@+id/signup_id"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="126dp"
        android:text="ID"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/input_signid"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/input_signpw"
        android:layout_alignTop="@+id/signup_id"
        android:hint="ID 입력"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/input_signpw" />

    <EditText
        android:id="@+id/input_signpw"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/signup_pw"
        android:layout_marginEnd="62dp"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="62dp" />

</RelativeLayout>